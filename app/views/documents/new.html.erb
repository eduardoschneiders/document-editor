<div class="row justify-content-center">
  <div class="col-md-6">
    <h1 class="text-center mb-4">Create New Document</h1>

    <%= form_with(model: @document, local: true, class: "needs-validation", novalidate: true) do |form| %>
      <div class="form-group">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter document title" %>
      </div>

      <div class="form-group">
        <%= form.label :content, class: "form-label" %>
        <%= form.text_area :content, class: "form-control", rows: 6, placeholder: "Enter document content" %>
      </div>

      <div class="form-group mt-3">
        <%= form.label :file, "Upload .txt File" %>
        <%= form.file_field :file, direct_upload: true, accept: ".txt" %>
        <div id="progress-bar"></div>
      </div>

      <div class="form-group mt-3">
        <%= form.submit "Create Document", class: "btn btn-success btn-block" %>
      </div>

    <% end %>

    <%= link_to 'Back to Documents', documents_path, class: 'btn btn-outline-secondary mt-3' %>
  </div>
</div>